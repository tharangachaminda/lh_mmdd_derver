{
    "name": "@learning-hub/monorepo",
    "version": "2.0.0",
    "description": "Multi-subject educational platform with AI-powered content generation",
    "private": true,
    "workspaces": ["packages/*", "apps/*"],
    "scripts": {
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces",
        "test:coverage": "npm run test:coverage --workspaces",
        "lint": "npm run lint --workspaces",
        "dev": "npm run dev --workspaces",
        "clean": "npm run clean --workspaces && rm -rf node_modules",
        "bootstrap": "npm install && npm run build",
        "subjects:add": "node tools/generators/add-subject.js",
        "content:migrate": "node tools/migration/migrate-content.js",
        "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
        "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "jest": "^29.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "lerna": "^7.0.0",
        "nx": "^16.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tharangachaminda/lh_mmdd_derver.git"
    },
    "keywords": [
        "education",
        "ai",
        "curriculum",
        "mathematics",
        "science",
        "english",
        "social-studies",
        "monorepo",
        "nodejs",
        "typescript"
    ],
    "author": "Learning Hub Development Team",
    "license": "MIT"
}
