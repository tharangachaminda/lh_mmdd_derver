{
    "name": "@learning-hub/core-api",
    "version": "2.0.0",
    "description": "Core educational platform API - subject-agnostic endpoints and business logic",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --build",
        "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@learning-hub/shared": "file:../shared",
        "express": "^4.18.0",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/cors": "^2.8.0",
        "@types/compression": "^1.7.0",
        "@types/morgan": "^1.9.0",
        "@types/node": "^20.0.0",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "typescript": "^5.0.0",
        "jest": "^29.0.0",
        "@types/jest": "^29.0.0",
        "nodemon": "^3.0.0",
        "ts-node": "^10.9.0"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "publishConfig": {
        "access": "restricted"
    }
}
