{
    "name": "@learning-hub/curriculum-data",
    "version": "1.0.0",
    "description": "Centralized curriculum data management, question ingestion, and vector database operations for the Learning Hub platform",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --build",
        "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "clean": "rm -rf dist",
        "data:ingest": "node dist/scripts/ingest-questions.js",
        "data:migrate": "node dist/scripts/migrate-curriculum.js",
        "vector:index": "node dist/scripts/vector-operations.js index",
        "vector:search": "node dist/scripts/vector-operations.js search",
        "vector:validate": "node dist/scripts/vector-operations.js validate",
        "curriculum:import": "node dist/scripts/curriculum-import.js",
        "curriculum:export": "node dist/scripts/curriculum-export.js",
        "curriculum:validate": "node dist/scripts/curriculum-validate.js",
        "questions:bulk-ingest": "node dist/scripts/bulk-ingest.js",
        "questions:validate": "node dist/scripts/question-validation.js",
        "opensearch:status": "node dist/scripts/opensearch-status.js",
        "opensearch:backup": "node dist/scripts/opensearch-backup.js"
    },
    "dependencies": {
        "@learning-hub/shared": "file:../shared",
        "@opensearch-project/opensearch": "^3.5.1",
        "langchain": "^0.3.34",
        "@langchain/langgraph": "^0.4.9",
        "dotenv": "^17.2.2",
        "zod": "^3.25.76",
        "uuid": "^13.0.0",
        "@types/uuid": "^9.0.8",
        "axios": "^1.12.2",
        "fs-extra": "^11.2.0",
        "glob": "^10.3.0",
        "@types/glob": "^8.1.0",
        "csvtojson": "^2.0.10",
        "json2csv": "^5.0.7",
        "papaparse": "^5.4.1",
        "xlsx": "^0.18.5",
        "node-cron": "^3.0.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/fs-extra": "^11.0.4",
        "@types/papaparse": "^5.3.0",
        "@types/node-cron": "^3.0.11",
        "typescript": "^5.0.0",
        "jest": "^29.0.0",
        "@types/jest": "^29.0.0",
        "nodemon": "^3.0.0",
        "ts-node": "^10.9.0",
        "eslint": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0"
    },
    "keywords": [
        "curriculum",
        "education",
        "data-management",
        "vector-database",
        "question-ingestion",
        "opensearch",
        "nz-curriculum",
        "mathematics",
        "science",
        "english",
        "social-studies",
        "learning-objectives"
    ],
    "files": [
        "dist",
        "data",
        "scripts",
        "package.json",
        "README.md"
    ],
    "publishConfig": {
        "access": "restricted"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
